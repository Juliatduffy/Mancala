<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brown_background">

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="53dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="55dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="settings"
        android:scaleType="centerInside"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/helpButton"
        android:layout_width="58dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="Help"
        android:scaleType="centerInside"
        android:src="@drawable/question"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="MANCALA"
        android:textColor="#fff7c2"
        android:textSize="65sp"
        android:textStyle="bold"
        android:fontFamily="@font/averia_serif_libre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/easyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="serif"
        android:paddingLeft="50dp"
        android:paddingTop="25dp"
        android:paddingRight="50dp"
        android:paddingBottom="25dp"
        android:text="Easy"
        android:textColor="#fff7c2"
        android:textSize="21sp"
        android:textStyle="bold"
        app:backgroundTint="@color/colors"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mediumButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:strokeColor="#fff7c2"
        app:strokeWidth="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mediumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="Medium"
        android:textColor="#fff7c2"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:backgroundTint="@color/colors"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toEndOf="@id/easyButton"
        app:layout_constraintEnd_toStartOf="@id/hardButton"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="#fff7c2"
        app:strokeWidth="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="Hard"
        android:textColor="#fff7c2"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:backgroundTint="@color/colors"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toEndOf="@id/mediumButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="#fff7c2"
        app:strokeWidth="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
