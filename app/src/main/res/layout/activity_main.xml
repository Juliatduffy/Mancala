<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:src="@drawable/settings_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANCALA"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/averia_serif_libre"
        app:layout_constraintTop_toBottomOf="@id/settingsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:paddingBottom="50dp"/>

    <!-- Play Online -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/playOnlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Online"
        android:textColor="#FFF8E7"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="#5E3E1E"
        app:backgroundTint="#A36C2B"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playComputerButton"
        android:layout_margin="8dp"
        app:layout_constraintHorizontalWeight="1" />

    <!-- Play the Computer -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/playComputerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play the Computer"
        android:textColor="#FFF8E7"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="#5E3E1E"
        app:backgroundTint="#A36C2B"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toEndOf="@id/playOnlineButton"
        app:layout_constraintEnd_toStartOf="@id/howToButton"
        android:layout_margin="8dp"
        app:layout_constraintHorizontalWeight="1" />

    <!-- How to Play -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/howToButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:textColor="#FFF8E7"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="#5E3E1E"
        app:backgroundTint="#A36C2B"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toEndOf="@id/playComputerButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintHorizontalWeight="1" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by Julia Duffy"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/averia_serif_libre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
