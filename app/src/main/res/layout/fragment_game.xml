<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/boardOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brown_background">

    <ImageView
        android:id="@+id/boardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/board"
        android:background="@null"
        android:layout_margin="0dp"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toEndOf="@id/col9"
        app:layout_constraintTop_toTopOf="@id/guide_top_row"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row" />


    <!-- Horizontal guidelines -->
    <ImageView
        android:id="@+id/boardImage2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/board"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row"
        app:layout_constraintEnd_toEndOf="@id/col9"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintTop_toTopOf="@id/guide_top_row" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_mid_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bottom_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <!-- Vertical guidelines: 11 total (2 spacers, 2 stores, 6 pits, 1 more spacer) -->
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col0" app:layout_constraintGuide_percent="0.00" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col1" app:layout_constraintGuide_percent="0.05" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col2" app:layout_constraintGuide_percent="0.17" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col3" app:layout_constraintGuide_percent="0.28" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col4" app:layout_constraintGuide_percent="0.39" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col5" app:layout_constraintGuide_percent="0.50" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col6" app:layout_constraintGuide_percent="0.61" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col7" app:layout_constraintGuide_percent="0.72" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col8" app:layout_constraintGuide_percent="0.83" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col9" app:layout_constraintGuide_percent="0.95" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/col10" app:layout_constraintGuide_percent="1.0" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="0dp" />

    <!-- Left store -->
    <ImageButton
        android:id="@+id/store_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="left store"
        android:background="@android:color/transparent"
        android:src="@drawable/long_hole"
        android:scaleType="fitXY"
        android:paddingLeft="12dp"
        android:paddingTop="22dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toTopOf="@id/guide_top_row"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col2" />

    <!-- Right store -->
    <ImageButton
        android:id="@+id/store_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:contentDescription="right store"
        android:scaleType="fitXY"
        android:paddingRight="12dp"
        android:paddingTop="22dp"
        android:paddingBottom="32dp"
        android:src="@drawable/long_hole"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row"
        app:layout_constraintEnd_toStartOf="@id/col9"
        app:layout_constraintStart_toStartOf="@id/col8"
        app:layout_constraintTop_toTopOf="@id/guide_top_row" />

    <!-- Top row: pits 0–5 -->
    <ImageButton android:id="@+id/pit0" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col2" app:layout_constraintEnd_toStartOf="@id/col3" app:layout_constraintTop_toTopOf="@id/guide_top_row" app:layout_constraintBottom_toBottomOf="@id/guide_mid_row" />
    <ImageButton android:id="@+id/pit1" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col3" app:layout_constraintEnd_toStartOf="@id/col4" app:layout_constraintTop_toTopOf="@id/guide_top_row" app:layout_constraintBottom_toBottomOf="@id/guide_mid_row" />
    <ImageButton android:id="@+id/pit2" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col4" app:layout_constraintEnd_toStartOf="@id/col5" app:layout_constraintTop_toTopOf="@id/guide_top_row" app:layout_constraintBottom_toBottomOf="@id/guide_mid_row" />
    <ImageButton android:id="@+id/pit3" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col5" app:layout_constraintEnd_toStartOf="@id/col6" app:layout_constraintTop_toTopOf="@id/guide_top_row" app:layout_constraintBottom_toBottomOf="@id/guide_mid_row" />
    <ImageButton android:id="@+id/pit4" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col6" app:layout_constraintEnd_toStartOf="@id/col7" app:layout_constraintTop_toTopOf="@id/guide_top_row" app:layout_constraintBottom_toBottomOf="@id/guide_mid_row" />
    <ImageButton android:id="@+id/pit5" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col7" app:layout_constraintEnd_toStartOf="@id/col8" app:layout_constraintTop_toTopOf="@id/guide_top_row" app:layout_constraintBottom_toBottomOf="@id/guide_mid_row" />

    <!-- Bottom row: pits 6–11 -->
    <ImageButton android:id="@+id/pit6" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col7" app:layout_constraintEnd_toStartOf="@id/col8" app:layout_constraintTop_toTopOf="@id/guide_mid_row" app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row" />
    <ImageButton android:id="@+id/pit7" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col6" app:layout_constraintEnd_toStartOf="@id/col7" app:layout_constraintTop_toTopOf="@id/guide_mid_row" app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row" />
    <ImageButton android:id="@+id/pit8" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col5" app:layout_constraintEnd_toStartOf="@id/col6" app:layout_constraintTop_toTopOf="@id/guide_mid_row" app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row" />
    <ImageButton android:id="@+id/pit9" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col4" app:layout_constraintEnd_toStartOf="@id/col5" app:layout_constraintTop_toTopOf="@id/guide_mid_row" app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row" />
    <ImageButton android:id="@+id/pit10" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col3" app:layout_constraintEnd_toStartOf="@id/col4" app:layout_constraintTop_toTopOf="@id/guide_mid_row" app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row" />
    <ImageButton android:id="@+id/pit11" style="@style/PitStyle" app:layout_constraintStart_toStartOf="@id/col2" app:layout_constraintEnd_toStartOf="@id/col3" app:layout_constraintTop_toTopOf="@id/guide_mid_row" app:layout_constraintBottom_toBottomOf="@id/guide_bottom_row" />

</androidx.constraintlayout.widget.ConstraintLayout>
